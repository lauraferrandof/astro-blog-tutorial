---
import "../styles/global.css";

const { frontmatter } = Astro.props;
---

<h1>{frontmatter.title}</h1>
<p>{frontmatter.description}</p>
<p class="metadata">Written by {frontmatter.author}</p>
<p class="metadata">Published on: {frontmatter.pubDate.slice(0, 10)}</p>
<hr />
<div class="content">
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    <slot />
</div>

<style>
    .metadata {
        color: grey;
        font-size: 0.8rem;
    }

    .content {
        padding-top: 2rem;
    }
</style>
